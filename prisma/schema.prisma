generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  username         String    @unique
  image            String?
  password         String
  role             String    @default("USER") // "ADMIN" or "USER"
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime? // Soft Delete support
  auditLogs        AuditLog[]
}

model InventoryItem {
  id                String       @id @default(cuid())
  year              Int
  month             Int
  week              Int
  date              DateTime
  company           String?
  waybillNo         String
  materialReference String
  stockCount        Int
  lastAction        String       // "ENTRY", "EXIT", "UPDATE", "DELETE"
  note              String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  deletedAt         DateTime?    // Soft Delete support
  
  // Optional: Relation to user who performed the last action
  lastModifiedBy    String? 

  @@index([materialReference])
  @@index([company])
  @@index([waybillNo])
  @@index([date])
  @@index([createdAt])
  @@index([deletedAt]) // Index for filtering active items
  @@index([materialReference, deletedAt]) // Optimized for Stock Checks
}

model RolePermission {
  id         String   @id @default(cuid())
  role       String   // ADMIN, IME, KALITE, USER
  permission String   // e.g., "inventory.delete", "users.create"
  granted    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([role, permission])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // CREATE, UPDATE, DELETE, LOGIN
  entity    String   // Inventory, User, System
  entityId  String?
  userId    String
  details   String?  // JSON string
  createdAt DateTime @default(now())

  // Relation
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([action])
  @@index([entity])
}

// Rate Limiting (Free - uses existing PostgreSQL)
model RateLimitEntry {
  id         String   @id @default(cuid())
  identifier String   // IP address or user ID
  endpoint   String   // e.g., "auth", "ai", "api"
  timestamp  DateTime @default(now())

  @@index([identifier, endpoint, timestamp])
  @@index([timestamp]) // For cleanup of old entries
}
