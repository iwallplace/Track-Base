generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  username         String    @unique
  image            String?
  password         String
  role             String    @default("USER") // "ADMIN" or "USER"
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime? // Soft Delete support
  auditLogs        AuditLog[]
  notifications    NotificationState[]
  stockCountSessions StockCountSession[]
}

model InventoryItem {
  id                String       @id @default(cuid())
  year              Int
  month             Int
  week              Int
  date              DateTime
  company           String?
  waybillNo         String
  waybillUrl        String?      // URL to the uploaded PDF
  materialReference String
  stockCount        Int
  lastAction        String       // "ENTRY", "EXIT", "UPDATE", "DELETE"
  note              String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  deletedAt         DateTime?    // Soft Delete support
  
  // Optional: Relation to user who performed the last action
  lastModifiedBy    String? 

  // Quality Control
  qcRequired Boolean  @default(false)
  qcStatus   String   @default("PENDING") // PENDING, APPROVED, REJECTED
  qcNote     String?

  // Warehouse / Addressing
  location   String?
  aisle      String?
  shelf      String?

  // Barcode
  barcode    String? @unique 

  @@index([materialReference])
  @@index([company])
  @@index([waybillNo])
  @@index([date])
  @@index([createdAt])
  @@index([deletedAt]) // Index for filtering active items
  @@index([materialReference, deletedAt]) // Optimized for Stock Checks
}

model RolePermission {
  id         String   @id @default(cuid())
  role       String   // ADMIN, IME, KALITE, USER
  permission String   // e.g., "inventory.delete", "users.create"
  granted    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([role, permission])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // CREATE, UPDATE, DELETE, LOGIN
  entity    String   // Inventory, User, System
  entityId  String?
  userId    String
  details   String?  // JSON string
  createdAt DateTime @default(now())

  // Relation
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([action])
  @@index([entity])
}

// Rate Limiting (Free - uses existing PostgreSQL)
model RateLimitEntry {
  id         String   @id @default(cuid())
  identifier String   // IP address or user ID
  endpoint   String   // e.g., "auth", "ai", "api"
  timestamp  DateTime @default(now())

  @@index([identifier, endpoint, timestamp])
  @@index([timestamp]) // For cleanup of old entries
}

model NotificationState {
  id             String   @id @default(cuid())
  userId         String
  notificationId String   // ID of the entity (e.g., InventoryItem ID for low stock)
  type           String   // 'low_stock' | 'new_user'
  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, notificationId, type])
  @@index([userId])
}

model Material {
  id             String   @id @default(uuid())
  reference      String   @unique // Material Reference Code
  minStock       Int      @default(20) // Critical Stock Limit
  description    String?
  // Industrial Standard Fields
  abcClass       String?  // 'A', 'B', 'C'
  supplier       String?
  defaultLocation String?
  unit           String   @default("Adet")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// AI Summary Cache - Stores generated AI summaries to reduce API calls
model AISummaryCache {
  id        String   @id @default(cuid())
  cacheKey  String   @unique // Hash of report data + language
  summary   String   // Generated summary text
  language  String   @default("tr") // tr or en
  createdAt DateTime @default(now())
  expiresAt DateTime // When this cache entry expires

  @@index([cacheKey])
  @@index([expiresAt]) // For cleanup of expired entries
}

// Stock Count Session - Represents a counting session for a specific date
model StockCountSession {
  id           String              @id @default(cuid())
  sessionDate  DateTime            // The date this count is for
  status       String              @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED, CANCELLED
  notes        String?             // Optional notes about the session
  createdBy    User                @relation(fields: [createdById], references: [id])
  createdById  String
  createdAt    DateTime            @default(now())
  completedAt  DateTime?           // When the session was marked complete
  entries      StockCountEntry[]

  @@unique([sessionDate, createdById]) // One session per user per date
  @@index([sessionDate])
  @@index([status])
}

// Stock Count Entry - Individual item count within a session
model StockCountEntry {
  id                String            @id @default(cuid())
  session           StockCountSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId         String
  materialReference String            // The material being counted
  systemStock       Int               // System stock at time of count
  countedStock      Int               // Actual counted amount
  difference        Int               // countedStock - systemStock
  status            String            @default("PENDING") // PENDING, MATCH, MISMATCH
  note              String?           // Optional note for this entry
  countedAt         DateTime          @default(now())

  @@unique([sessionId, materialReference]) // One entry per material per session
  @@index([sessionId])
  @@index([materialReference])
}

