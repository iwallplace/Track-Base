generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  username         String    @unique
  image            String?
  password         String
  role             String    @default("USER") // "ADMIN" or "USER"
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model InventoryItem {
  id                String       @id @default(cuid())
  year              Int
  month             Int
  week              Int
  date              DateTime
  company           String
  waybillNo         String
  materialReference String
  stockCount        Int
  lastAction        String       // "ENTRY", "EXIT", "UPDATE", "DELETE"
  note              String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  
  // Optional: Relation to user who performed the last action
  lastModifiedBy    String? 
}

model RolePermission {
  id         String   @id @default(cuid())
  role       String   // ADMIN, IME, KALITE, USER
  permission String   // e.g., "inventory.delete", "users.create"
  granted    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([role, permission])
}
